{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "__mocks__/**/*",
    "*.js"
  ]
}

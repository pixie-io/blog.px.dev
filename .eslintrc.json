{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "ignorePatterns": [
    "dist/**",
    "tools/**",
    "plugins/**",
    "gatsby-*.js"
  ],
  "extends": [
    "plugin:react/recommended",
    "airbnb-base",
    "airbnb-typescript/base",
    "airbnb/rules/react"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": [
        "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/ban-ts-ignore": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "max-len": "off"
      }
    }
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module",
    "project": [
      "./tsconfig.json"
    ]
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ],
        "moduleDirectory": [
          "node_modules",
          "src/"
        ]
      }
    }
  },
  "rules": {
    "import/extensions": 0,
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "import/no-extraneous-dependencies": [
      "error"
    ],
    "react/jsx-filename-extension": "off",
    "react/prop-types": [
      2,
      {
        "skipUndeclared": true
      }
    ],
    "react/jsx-props-no-spreading": [
      0
    ],
    "jsx-quotes": [
      "error",
      "prefer-single"
    ]
  }
}
